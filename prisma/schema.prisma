generator client {
  provider       = "prisma-client-js"
  reviewFeatures = ["prismaSchemaFolder", "strictUndefinedChecks", "driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id         String   @id @default(cuid())
  sessionToken String   @unique @map("session_token") 
  userId     String   @map("user_id")
  expires    DateTime
  requireF2A Boolean  @default(true)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  hashedPassword String    @map("hashed_password")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  sessions       Session[]
  customerUpdates CustomerLifecycle[]

  @@map("users")
}

model Classified {
  id             Int              @id @default(autoincrement())
  views          Int              @default(0)
  slug           String           @unique
  vrm            String?
  title          String?
  description    String?
  year           Int
  odoReading     Int              @default(0) @map("odo_reading")
  doors          Int              @default(2)
  seats          Int              @default(5)
  price          Int              @default(0) @map("price")
  makeId         Int              @map("make_id")
  modelId        Int              @map("model_id")
  modelVariantId Int?             @map("model_variant_id")
  ulezCompliance ULEZCompliance   @default(EXEMPT)
  transmission   Transmission     @default(MANUAL)
  colour         Colour           @default(BLACK)
  fuelType       FuelType         @default(PETROL)
  bodyType       BodyType         @default(SEDAN)
  odoUnit        OdoUnit          @default(MILES)
  currency       CurrencyCode     @default(GBP)
  status         ClassifiedStatus @default(DRAFT)
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  make           Make             @relation(fields: [makeId], references: [id])
  model          Model            @relation(fields: [modelId], references: [id])
  modelVariant   ModelVariant?    @relation(fields: [modelVariantId], references: [id])
  customers      Customer[]
  images         Image[]

  @@index([makeId, modelId], map: "index_make_model")
  @@index([status], map: "index_status")
  @@index([price], map: "index_price")
  @@map("classifieds")
}

model Make {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  image       String
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  classifieds Classified[]
  models      Model[]

  @@map("makes")
}

model Model {
  id            Int            @id @default(autoincrement())
  name          String
  makeId        Int            @map("make_id")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")
  classifieds   Classified[]
  modelVariants ModelVariant[]
  make          Make           @relation(fields: [makeId], references: [id], onDelete: Cascade)

  @@unique([makeId, name])
  @@map("models")
}

model ModelVariant {
  id          Int          @id @default(autoincrement())
  name        String
  modelId     Int          @map("model_id")
  yearStart   Int
  yearEnd     Int
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  classifieds Classified[]
  model       Model        @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@unique([modelId, name])
  @@map("model_variants")
}

model Image {
  id           Int        @id @default(autoincrement())
  alt          String
  src          String
  classifiedId Int        @map("classified_id")
  blurhash     String
  isMain       Boolean    @default(false) @map("is_main")
  classified   Classified @relation(fields: [classifiedId], references: [id], onDelete: Cascade)

  @@map("images")
}

model Customer {
  id            Int                 @id @default(autoincrement())
  firstName     String              @map("first_name")
  lastName      String              @map("last_name")
  email         String
  mobile        String?
  carTitle      String?
  notes         String?
  bookingDate   DateTime?           @map("booking_date")
  termsAccepted Boolean             @default(false) @map("terms_accepted")
  status        CustomerStatus      @default(INTERESTED)
  classifiedId  Int?                @map("classified_id")
  createdAt     DateTime            @default(now()) @map("created_at")
  updatedAt     DateTime            @updatedAt @map("updated_at")
  lifecycle     CustomerLifecycle[]
  classified    Classified?         @relation(fields: [classifiedId], references: [id], onDelete: Cascade)

  @@map("customers")
}

model CustomerLifecycle {
  id         Int            @id @default(autoincrement())
  customerId Int            @map("customer_id")
  newStatus  CustomerStatus @map("new_status")
  change     String
  updatedById String? @map("updated_by_id")
  updatedBy   User?   @relation(fields: [updatedById], references: [id])
  createdAt  DateTime       @default(now()) @map("created_at")
  updatedAt  DateTime       @updatedAt @map("updated_at")
  customer   Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("customer_lifecycle")
}

model PageView {
  id        Int      @id @default(autoincrement())
  path      String
  viewedAt  DateTime @default(now()) @map("viewed_at")
  ipAddress String?
  userAgent String?
  referrer  String?

  @@index([path, viewedAt])
  @@map("page_views")
}

enum ClassifiedStatus {
  LIVE
  DRAFT
  SOLD
}

enum CurrencyCode {
  GBP
  EUR
  USD
}

enum OdoUnit {
  MILES
  KILOMETERS
}

enum BodyType {
  SEDAN
  HATCHBACK
  SUV
  COUPE
  CONVERTIBLE
  WAGON
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum Colour {
  BLACK
  BLUE
  BROWN
  GOLD
  GREEN
  GREY
  ORANGE
  PINK
  PURPLE
  RED
  SILVER
  WHITE
  YELLOW
}

enum ULEZCompliance {
  EXEMPT
  NON_EXEMPT
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum CustomerStatus {
  SUBSCRIBER
  INTERESTED
  CONTACTED
  PURCHASED
  COLD
}